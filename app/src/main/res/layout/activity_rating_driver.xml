<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_gradien">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="32dp"
            android:paddingHorizontal="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgDriver"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:contentDescription="Driver Photo"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Adam Noverian"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- ID BARU DITAMBAHKAN di LinearLayout ini -->
            <LinearLayout
                android:id="@+id/starContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/hafid_bintang"
                    app:tint="#FFD700"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Rating Star 1"/>

                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/hafid_bintang"
                    app:tint="#FFD700"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Rating Star 2"/>

                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/hafid_bintang"
                    app:tint="#FFD700"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Rating Star 3"/>

                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/hafid_bintang"
                    app:tint="#FFD700"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Rating Star 4"/>

                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/hafid_bintang"
                    app:tint="#FFD700"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Rating Star 5"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>