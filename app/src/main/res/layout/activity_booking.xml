<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/hafid_x"
        app:tint="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Where do you want to go?"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnClose"
        app:layout_constraintTop_toTopOf="@id/btnClose" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_input"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <ImageView
            android:id="@+id/iconStart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/hafid_atas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCurrentLoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Your current location"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iconStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/iconStart"
            app:layout_constraintTop_toTopOf="@id/iconStart"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/dividerInput"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconStart"
            app:layout_constraintTop_toBottomOf="@id/iconStart" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="#D0D0D0"
            app:layout_constraintBottom_toTopOf="@id/iconDest"
            app:layout_constraintEnd_toEndOf="@id/iconStart"
            app:layout_constraintStart_toStartOf="@id/iconStart"
            app:layout_constraintTop_toBottomOf="@id/iconStart" />

        <ImageView
            android:id="@+id/iconDest"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/hafid_bunder_oren"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerInput" />

        <TextView
            android:id="@+id/tvDest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Search for a destination"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/iconDest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iconDest"
            app:layout_constraintTop_toTopOf="@id/iconDest" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layoutActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layoutInput">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_outline"
            android:gravity="center"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/hafid_logo_map"
                app:tint="@color/blue_accent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Select via map"
                android:textSize="12sp"
                android:textColor="#505050"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_rounded_outline"
            android:gravity="center"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/hafid_plus_oren"
                app:tint="@color/orange_accent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Add a destination"
                android:textSize="12sp"
                android:textColor="#505050"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/dividerSection"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutActions"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLocation1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_input"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/dividerSection">

        <TextView
            android:id="@+id/tvLocName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Location"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Lorem Ipsum Zamn"
            android:textColor="@color/gray_text"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvLocName1"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/hafid_x"
            app:tint="#505050"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemLocation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_rounded_input"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/itemLocation1">

        <TextView
            android:id="@+id/tvLocName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Location"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Lorem Ipsum Zamn"
            android:textColor="@color/gray_text"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvLocName2"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/hafid_x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#505050" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>