<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <View
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Coordinator -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- MAP CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_map"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_map_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/frame4"
                        tools:ignore="ContentDescription" />
                </com.google.android.material.card.MaterialCardView>

                <!-- SEARCH & HISTORY ROW -->
                <LinearLayout
                    android:id="@+id/search_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/card_map">

                    <!-- Search Box -->
                    <LinearLayout
                        android:id="@+id/btn_search_destination"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:layout_marginEnd="12dp"
                        android:background="@android:color/transparent">

                        <ImageView
                            android:id="@+id/icon_search_pin"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/alfian_bunder_oren" />

                        <TextView
                            android:id="@+id/text_search_placeholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search for a destination"
                            android:textColor="#888"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/icon_search"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_search"
                            app:tint="#555"/>
                    </LinearLayout>

                    <!-- History Icon -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/btn_history_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/alfian_history" />

                    <!-- History Button -->
                </LinearLayout>

                <!-- Save Address Section -->
                <LinearLayout
                    android:id="@+id/section_save_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toBottomOf="@id/search_row">

                    <ImageView
                        android:id="@+id/icon_bookmark"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/alfian_bookmark" />

                    <TextView
                        android:id="@+id/text_save_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save an address for a"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"/>

                    <TextView
                        android:id="@+id/text_save_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="faster booking"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- BOTTOM NAV BAR -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/bottom_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@android:color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Home Button -->
        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/alfian_rumah_main_biru"
            android:elevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_button_placeholder"
            app:layout_constraintTop_toTopOf="@id/bottom_bar_bg"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Profile Button -->
        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/alfian_wong_main"
            app:tint="#CCC"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/center_button_placeholder"
            app:layout_constraintTop_toTopOf="@id/bottom_bar_bg"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Invisible placeholder to center the Motor Button -->
        <View
            android:id="@+id/center_button_placeholder"
            android:layout_width="80dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- Main Motor Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_motor"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cardCornerRadius="36dp"
            app:cardElevation="10dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icon_motor"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/alfian_motor_biru" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
